      "source": [
        "# 1. 各辺の長さを変数に設定します\n",
        "upper_base = 10    # 上辺 (cm)\n",
        "lower_base = 20    # 下辺 (cm)\n",
        "height = 5         # 高さ (cm)\n",
        "\n",
        "# 2. 台形の面積を計算します\n",
        "# 公式: (上辺 + 下辺) * 高さ / 2\n",
        "trapezoid_area = (upper_base + lower_base) * height / 2\n",
        "\n",
        "# 3. 計算結果を単位付きで出力します\n",
        "print(f\"{trapezoid_area}cm²\")\n"
      ]
    }
  ]
